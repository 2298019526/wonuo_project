/* pages/todayRank/index.wxss */
/* 头部 */
.header-container{
  width: 100%;
  height: 400rpx;
  background: linear-gradient(to bottom,#FF9999,#e9524b);
  display: flex;
  justify-content: center;
  align-items: center;
}
.header-container .header-item{
  width: 150rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.header-container .header-center{
  width: 250rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  transform: translateY(-20rpx);
}
.header-container .header-image{
  width: 100rpx;
  height: 100rpx;
  border: 6rpx solid #ffffff;
  border-radius: 50%;
  position: relative;
  background-color: #ffffff;
}
.header-container .header-center .header-image{
  width: 150rpx;
  height: 150rpx;
}
.header-container .header-image image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
}
.header-container .header-image .rank-label{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  line-height: 40rpx;
  text-align: center;
  color: #ffffff;
  font-size: 28rpx;
  font-weight: 600;
  position: absolute;
  bottom: -20rpx;
  left: calc(50% - 20rpx);
  z-index: 9;
}
.header-container .header-detail{
  width: 100%;
  text-align: center;
  margin-top: 20rpx;
}
.header-container .header-detail .user-name{
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #ffffff;
  font-size: 36rpx;
}
.header-container .header-detail .user-detail{
  width: 100%;
  color: #f1f1f1;
  font-size: 24rpx;
}
/* 头部 */
/* 主体排行榜 */
.ranking-container{
  width: 90%;
  background-color: #ffffff;
  margin: 0 auto;
  margin-top: -70rpx;
  margin-bottom: 50rpx;
  border-radius: 10rpx;
  box-shadow: 0 0 10rpx #ddd;
}
.ranking-container .ranking-title{
  width: 100%;
  line-height: 80rpx;
  text-align: center;
  color: #666;
  font-size: 32rpx;
  font-weight: 600;
}
.ranking-container .ranking-item{
  width: 100%;
  height: 120rpx;
  display: flex;
  align-items: center;
  position: relative;
}
.ranking-container .ranking-item::after{
  content: "";
  display: block;
  width: calc(100% - 80rpx);
  height: 2rpx;
  background-color: #f1f1f1;
  position: absolute;
  right: 0rpx;
  bottom: 0;
}
.ranking-container .ranking-item .ranking-number{
  flex-shrink: 0;
  width: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.ranking-container .ranking-item .ranking-number .ranking-first{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  background-color: #FFD700;
  color: #ffffff;
}
.ranking-container .ranking-item .ranking-number .ranking-second{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  background-color: #D3D3D3;
  color: #ffffff;
}
.ranking-container .ranking-item .ranking-number .ranking-third{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 40rpx;
  background-color: #E69966;
  color: #ffffff;
}
.ranking-container .ranking-item .ranking-head{
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  overflow: hidden;
  flex-shrink: 0;
}
.ranking-container .ranking-item .ranking-head image{
  width: 100%;
  height: 100%;
}
.ranking-container .ranking-item .ranking-name{
  width: 100%;
  flex: 1;
  padding: 0rpx 20rpx;
  font-size: 32rpx;
  color: #666666;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.ranking-container .ranking-item .ranking-detail{
  width: 180rpx;
  color: #999999;
  font-size: 28rpx;
  text-align: center;
}
/* 主体排行榜 */
/* 无数据 */
.not-find{
  width: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}
.not-find .not-find-image{
  width: 375rpx;
  margin: 20rpx;
}
.not-find .not-find-image image{
  width: 100%;
}
.not-find .not-find-text{
  font-size: 28rpx;
  color: #999999;
  text-align: center;
}
