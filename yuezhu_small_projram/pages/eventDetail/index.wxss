/* pages/eventDetail/index.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #f6f6f6;
}
cover-view,cover-image{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}
/* 用户信息 */
.user-container{
  width: calc(100% - 40rpx);
  margin: 20rpx auto;
  background-color: #ffffff;
  box-shadow: 0 0 10rpx #dddddd;
}
.user-container .user-content{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx;
}
.user-container .user-content .user-head{
  width: 100rpx;
  height: 100rpx;
  flex-shrink: 0;
}
.user-container .user-content .user-head image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
}
.user-container .user-content  .user-detail{
  width: 100%;
  flex: 1;
  padding-left: 10rpx;
}
/* 用户信息 */
/* 地图位置 */
.map-container{
  width: calc(100% - 40rpx);
  height: 400rpx;
  margin: 20rpx auto;
  background-color: #ffffff;
  box-shadow: 0 0 10rpx #dddddd;
  position: relative;
}
.map-control .active{
  background-color: #dddddd;
}
.location-control{
  width: 60rpx;
  height: 60rpx;
  box-shadow: 0rpx 0rpx 10rpx #ddd;
  position: absolute;
  top: 20rpx;
  right: 20rpx;
  background-color: #ffffff;
  z-index: 99999;
  padding: 10rpx;
  border-radius: 50%;
}
.location-control cover-image{
  width: 100%;
  height: 100%;
}
.zoom-control{
  width: 60rpx;
  position: absolute;
  top: 100rpx;
  right: 20rpx;
  background-color: #ffffff;
  box-shadow: 0rpx 0rpx 10rpx #ddd;
  text-align: center;
}
.zoom-control .zoom-item{
  width: 60rpx;
  height: 60rpx;
  text-align: center;
  line-height: 60rpx;
  font-size: 50rpx;
  color: #666666;
}
/* 地图位置 */