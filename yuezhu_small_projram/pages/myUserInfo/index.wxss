/* 头部信息 */

.user-container{
  width: calc(100% - 40rpx);
  margin: 20rpx auto;
  box-shadow: 0 0 10rpx #dddddd;
  border-radius: 10rpx;
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-content: center;
}
.user-head{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.user-head image{
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
}