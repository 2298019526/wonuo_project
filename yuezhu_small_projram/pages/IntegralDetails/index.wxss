/* pages/IntegralDetails/index.wxss */
/* 头部 */
.header-container{
  width: calc(100% - 40rpx);
  height: 300rpx;
  margin: 20rpx auto;
  box-shadow: 0rpx 0rpx 10rpx #dddddd;
  border-radius: 10rpx;
  background: linear-gradient(to right, #ff543b, #d94839 );
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #ffffff;
}
.header-container .header-bg{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1;
}
.header-container .header-bg image{
  width: 100%;
  height: 100%;
}
.header-title{
  font-size: 32rpx;
  text-align: center;
  z-index: 9;
  color: #f1f1f1;
}
.header-number{
  font-size: 60rpx;
  font-weight: 600;
  z-index: 9;
}
/* 头部 */

/* 主体 */
.body-container{
  width: 100%;
  padding: 0rpx 20rpx;
}
.body-container .body-title{
  width: 100%;
  padding: 10rpx 0rpx;
}
.body-container .body-title .month-picker{
  display: flex;
  align-items: center;
  color: #333333;
  font-size: 40rpx;
}
.body-container .body-title .month-picker .iconfont{
  color: #e9524b;
  font-size: 48rpx;
}
.body-container .body-content{
  width: 100%;
  padding: 0rpx 20rpx;
}
.record-item{
  width: 100%;
  border-bottom: 1rpx solid #f1f1f1;
  padding: 20rpx 10rpx;
}
.record-item .record-title{
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 42rpx;
  color: #666666;
  margin-bottom: 10rpx;
}
.record-item .record-title .title-add-number{
  color: #66CC99;
}
.record-item .record-title .title-sub-number{
  color: #e9524b;
}
.record-item .record-detail{
  font-size: 30rpx;
  color: #999999;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
/* 主体 */